.content_bulk
  .text_content_wrapper
    .text_content
      %h2 All Deaths
      .scorelisting
        %table.greytable.misc
          %tr
            %th Count
            %th Death
          - count = 0
          - @deaths.each do |death|
            - style = (count % 2) == 0 ? "cell1" : "cell2"
            - count += 1
            %tr{:id => style}
              %td.table_number= death.count
              %td= h death.death
