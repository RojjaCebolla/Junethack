.text_content.non_top_post
  %h3 
    Most ascensions
  .scorelisting
    %table
      %tr
        %th Name 
        %th Ascensions
      - count = 0
      - @most_ascended_users.each do |u|
        - style = (count % 2) == 0 ? "cell1" : "cell2"
        - count += 1
        %tr{:id => style}
          %td= h u.name
          %td= u.ascensions
.text_content.non_top_post
  %h3 
    Highest sustained ascension rate
  .scorelisting
    %table
      %tr
        %th Name 
        %th Rate
      - count = 0
      - @highest_density_users.each do |username, info|
        - style = (count % 2) == 0 ? "cell1" : "cell2"
        - count += 1
        %tr{:id => style}
          %td= h username
          %td= h info
