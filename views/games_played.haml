%h2= @games_played_title
.scorelisting
  %table.greytable
    %tr
      %th Name
      %th Variant
      %th Server
      %th Points
      %th Killer
      // download column
      %th
      %th Time (UTC)
    - count = 0
    - @games_played.each do |game|
      - style = (count % 2) == 0 ? "cell1" : "cell2"
      - count += 1
      %tr{:id => style}
        %td{:id => "game-#{game.id}"}
          - if @games_played_user_links
            %a{:href => "/user_id/#{game.user_id}"}= h game.name
          - else
            = h game.name
        %td= h game.variant_name
        %td= h game.server.url
        %td.table_number= game.points
        %td= h game.death
        %td
          // link to the dumplog of the game if possible
          - link = game.server.dumplog_link(game)
          - if link then
            (<a href="#{link}">d</a>)
        %td.table_date= Time.at(game.endtime.to_i).getutc.strftime("%Y-%m-%d&nbsp;%H:%M")
