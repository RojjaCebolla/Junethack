.text_content.non_top_post
  %h3
    Competition
  - variants = @userscore.variants
  - @userscore.variants.each do |variant, variant_name|
    %h4= variant_name
    %p= "Most ascensions: #{@userscore.most_ascensions variant}"
    %p= "Longest ascension streak: #{@userscore.longest_ascension_streak variant}"
    %p= "Fastest ascension (gametime): #{(@userscore.fastest_ascension_gametime variant)}"
    %p= "Fastest ascension (realtime): #{(@userscore.fastest_ascension_realtime variant)}"
    %p= "Highest scoring ascension: #{@userscore.highest_scoring_ascension variant}"
    %p= "Lowest scoring ascension: #{@userscore.lowest_scoring_ascension variant}"
    %p= "Most conducts in a single ascension: #{@userscore.most_conducts_ascension variant}"

.text_content.non_top_post
  %h3
    Games played
  .scorelisting
    %table
      %tr
        %th Name
        %th Points
        %th Killer
        %th Time
      - count = 0
      - @games.each do |game|
        - style = (count % 2) == 0 ? "cell1" : "cell2"
        - count += 1
        %tr{:id => style}
          %td= game.name
          %td.table_number= game.points
          %td= game.death
          %td.table_date= Time.at(game.endtime.to_i).getutc.strftime("%Y-%m-%d %H:%M")
