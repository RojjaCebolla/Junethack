.content_bulk
  .text_content_wrapper
    .text_content
      %h2
        Clans
      %table.prettytable
        %tr
          %th{style: 'width: 1.5em'}
          %th
            Clan name
          %th
            Clan admin
          %th
            Members
        - @clans.each do |clan|
          %tr{style: 'vertical-alig: middle'}
            %td
              %span
                %img{src: clan.gravatar_link, style: 'vertical-align: middle; width: 100%'}
            %td
              %span
                %a{:href => "/clan/#{CGI::escape clan.name}"}
                  #{h clan.name}
            %td
              %a{:href => "/user/" + clan.get_admin.login}
                #{h clan.get_admin.login}
            %td
              #{h clan.users.uniq.length}
    %span#end_of_content_spacer.clear
