- cache_fragment("#{Game.max_endtime}_#{User.count}_#{Account.count}") do
  .content_bulk
    .text_content_wrapper
      .text_content
        %h3
          All Players
        %table.prettytable
          %tr
            %th
              Username
            %th
              Servers
            %th
              Games Played
            %th
              Trophies Earned
          - @users.sort_by {|user| user.login.downcase }.each do |user|
            %tr
              %td
                %a{:href => "/user/" + user.login}
                  #{h user.login}
              %td
                #{h user.servers.map(&:url).uniq.count}
              %td
                #{h user.games_count}
              %td
                #{h user.scoreentries.count}
      %span#end_of_content_spacer.clear
